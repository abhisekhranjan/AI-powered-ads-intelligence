# Backend Environment Variables Example
# Copy this file to .env and fill in your values

# Server Configuration
NODE_ENV=development
PORT=3000
API_PREFIX=/api

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=your_password
DB_NAME=riseroutes_dev

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_change_in_production
JWT_EXPIRES_IN=7d

# AI Provider Configuration
# Choose provider: 'deepseek', 'gemini', 'openai', or 'openrouter'
AI_PROVIDER=deepseek

# DeepSeek Configuration (Recommended - Fast & Affordable)
# Get your API key from https://platform.deepseek.com/api_keys
DEEPSEEK_API_KEY=your-deepseek-api-key-here

# Google Gemini Configuration
# Get your API key from https://aistudio.google.com/app/apikey
GEMINI_API_KEY=your-gemini-api-key-here

# OpenAI Configuration (Direct)
# Get your API key from https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-proj-your-openai-key-here

# OpenRouter Configuration (Multiple Models)
# Get your API key from https://openrouter.ai/keys
# Add credits at https://openrouter.ai/credits
OPENROUTER_API_KEY=sk-or-v1-your-openrouter-key-here

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
CORS_ORIGIN=http://localhost:5173

# SMTP Configuration (Hostinger)
SMTP_HOST=smtp.hostinger.com
SMTP_PORT=465
SMTP_USER=your-email@yourdomain.com
SMTP_PASS=your-email-password
CONTACT_EMAIL=contact@riseroutes.com
